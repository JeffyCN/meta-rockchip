  * if no window was available  */
@@ -275,6 +440,7 @@ gst_xv_image_sink_xvimage_put (GstXvImageSink * xvimagesink,
   }
 
   mem = (GstXvImageMemory *) gst_buffer_peek_memory (xvimage, 0);
+
   gst_xvimage_memory_get_crop (mem, &mem_crop);
 
