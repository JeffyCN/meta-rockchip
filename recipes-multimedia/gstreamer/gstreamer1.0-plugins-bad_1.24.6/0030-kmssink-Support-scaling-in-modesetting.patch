--- a/sys/kms/gstkmssink.h
+++ b/sys/kms/gstkmssink.h
@@ -76,6 +76,7 @@ struct _GstKMSSink {
   gboolean can_scale;
 
   gboolean modesetting_enabled;
+  gboolean mode_valid;
   gboolean restore_crtc;
   GstStructure *connector_props;
   GstStructure *plane_props;
