+
+static gboolean
+proxy_wait_on_eos_signal (GstElement * decodebin, guint eos_received,
+    GstURIDecodeBin * dec)
+{
+  gboolean result;
+
+  g_signal_emit (dec, gst_uri_decode_bin_signals[SIGNAL_WAIT_ON_EOS], 0,
+      eos_received, &result);
+  GST_DEBUG_OBJECT (dec, "wait-on-eos returned %d", result);
+
+  return result;
+}
