+static int
+frame_filter (const struct dirent *ent)
+{
+  /* Accept all directories but "." and "..". */
+  if (ent->d_type != DT_DIR)
+    return 0;
+  if (!strcmp (ent->d_name, "."))
+    return 0;
+  if (!strcmp (ent->d_name, ".."))
+    return 0;
+  return 1;
+}
