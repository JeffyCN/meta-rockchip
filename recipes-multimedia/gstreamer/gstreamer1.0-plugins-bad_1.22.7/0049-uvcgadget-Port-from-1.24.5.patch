+static int
+frame_compare (const void *a, const void *b)
+{
+  const struct uvc_function_config_frame *fa = a;
+  const struct uvc_function_config_frame *fb = b;
+
+  if (fa->index < fb->index)
+    return -1;
+  else if (fa->index == fb->index)
+    return 0;
+  else
+    return 1;
+}
